#Include RunAsAdmin.ahk
RunAsAdmin()

Regwrite, REG_SZ, HKEY_LOCAL_MACHINE\SOFTWARE\Classes\Directory\background\shell\PasteDirectory,SubCommands,PasteDirectoryAll;PasteDirectoryOne;
Regwrite, REG_SZ, HKEY_LOCAL_MACHINE\SOFTWARE\Classes\Directory\background\shell\PasteDirectory,MUIVerb,Paste Directory

Regwrite, REG_SZ, HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\Explorer\CommandStore\shell\PasteDirectoryAll,MUIVerb,All Level
Regwrite, REG_SZ, HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\Explorer\CommandStore\shell\PasteDirectoryAll\command,,%A_ScriptDir%\all.exe

Regwrite, REG_SZ, HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\Explorer\CommandStore\shell\PasteDirectoryOne,MUIVerb,One Level
Regwrite, REG_SZ, HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows\CurrentVersion\Explorer\CommandStore\shell\PasteDirectoryOne\command,,%A_ScriptDir%\one.exe

MsgBox, 64, PasteDirectory, Installation Complete...
